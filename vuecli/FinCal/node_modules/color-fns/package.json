{
  "name": "color-fns",
  "version": "0.0.7",
  "description": "Modern JavaScript color utility library.",
  "author": "",
  "main": "dist/color-fns.js",
  "module": "dist/color-fns.esm.js",
  "unpkg": "dist/color-fns.js",
  "license": "MIT",
  "keywords": [
    "color",
    "utility",
    "functions"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint ./src --fix",
    "build:esm": "node scripts/esm",
    "build:umd": "node scripts/umd",
    "build": "npm run lint && npm run build:esm && npm run build:umd"
  },
  "maintainers": [
    {
      "name": "Abdelrahman3D",
      "email": "abdelrahman3d@gmail.com"
    }
  ],
  "eslintIgnore": [
    "test",
    "dist"
  ],
  "jest": {
    "testMatch": [
      "**/test/**/*.js"
    ]
  },
  "files": [
    "dist/*.js"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "chalk": "^2.3.2",
    "eslint": "^5.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.0.1",
    "filesize": "^3.6.0",
    "gzip-size": "^5.0.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.0",
    "lint-staged": "^7.2.0",
    "mkdirp": "^0.5.1",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-browsersync": "^0.2.6",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-replace": "^2.0.0",
    "uglify-js": "^3.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --edit -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
